{
  "name": "sane-config",
  "version": "0.0.0-semantic-release",
  "description": "Simple and sane configuration management.",
  "main": "dist/index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production babel src -d dist",
    "lint": "eslint src test",
    "test": "npm run lint && npm run test:coverage",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter lcov --reporter text --check-coverage npm run test:unit",
    "test:unit": "cross-env NODE_ENV=test ava --verbose",
    "test:unit:watch": "cross-env NODE_ENV=test ava --verbose -s --watch",
    "preversion": "npm test",
    "version": "npm run build && git add -f dist",
    "postversion": "git push && git push --tags",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/axe312ger/sane-config.git"
  },
  "keywords": [
    "configuration",
    "config",
    "configuration management"
  ],
  "author": "Benedikt RÃ¶tsch <info@benedikt-roetsch.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/axe312ger/sane-config/issues"
  },
  "homepage": "https://github.com/axe312ger/sane-config#readme",
  "files": [
    "dist",
    "README.md",
    "CONTRIBUTING.md"
  ],
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "condition-circle": "^1.5.0",
    "cross-env": "^3.1.4",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.13.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "last-release-git": "^0.0.2",
    "nyc": "^10.0.0",
    "semantic-release": "^6.3.2"
  },
  "dependencies": {
    "find-root": "^1.0.0",
    "jsonschema": "^1.1.1"
  },
  "release": {
    "verifyConditions": "condition-circle",
    "getLastRelease": "last-release-git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "configDirectory": "./test/fixtures",
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit",
    "source": [
      "src/**/*.js"
    ],
    "files": [
      "test/**/*.test.js"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
